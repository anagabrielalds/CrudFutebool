
@{ ViewData["Title"] = "Update Técnico"; }

@model Tecnico
<h3 style="margin:40px; text-align:center">Update do Técnico</h3>
<form asp-action="UpdateTecnico" method="post">


    <div class="panel panel-default" style="background-color: lightgreen; padding-top:40px; border: solid 2px black">
        <div class="panel-body modal-dialog-scrollable" style="justify-content: center;">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label" for="nome">Nome do Técnico</label>
                    <input type="text" class="form-control" id="nome" placeholder="Nome do Time" asp-for="@Model.Nome">
                    <span class="text-danger" asp-validation-for="@Model.Nome"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="Nacionalidade">Nacionalidade</label>
                    <input type="text" class="form-control" id="Nacionalidade" placeholder="Nacionalidade" asp-for="@Model.Nacionalidade">
                    <span class="text-danger" asp-validation-for="@Model.Nacionalidade"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="Peso">Peso</label>
                    <input type="text" class="form-control" id="Peso" placeholder="Peso" asp-for="@Model.Peso">
                    <span class="text-danger" asp-validation-for="@Model.Peso"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label" for="Altura">Altura</label>
                    <input type="text" class="form-control" id="Altura" placeholder="Altura" asp-for="@Model.Altura">
                    <span class="text-danger" asp-validation-for="@Model.Altura"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="Descricao">Descrição</label>
                    <input type="text" class="form-control" id="Descricao" placeholder="Descrição" asp-for="@Model.Descricao">
                    <span class="text-danger" asp-validation-for="@Model.Descricao"></span>
                </div>

            </div>

        </div>
        <div class="col-md-4 d-inline">
            <div class="form-group" style="justify-content: center; display: flex;">
                <button type="submit"
                        class="btn btn-success " style="width:50%">
                    Atualizar
                </button>
            </div>
        </div>
    </div>
</form>