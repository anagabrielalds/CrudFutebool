@{ ViewData["Title"] = "Lista de Campos";}

@model List<Campo>;

<h3 style="margin:40px; text-align:center">Lista de todos os Campos</h3>


<div style="display: flex; flex-wrap:wrap">
    @foreach (var item in Model)
    {
    <div style="        
        background: lightgreen;
        margin: 10px;
        color: black;
        border: solid 2px black;
        display: flex;
        flex-direction: column;
        width: 30%;
        height: auto;
        padding-left: 30px;
        padding-top: 30px;">

        <p>ID(@item.Id) - Nome do Gramado:  @item.NomeGramado </p>
        <p>Referência:  @item.Referencia </p>
        <p>Estado:  @item.Estado </p>
        <p>Endreço:  @item.Endereco - @item.CEP </p>

        @* Botões *@
        <div class="form-group">
            <a class="btn btn-success" asp-action="UpdateCampo" asp-route-id="@item.Id">
                Update Campo
            </a>
            <a class="btn btn-success" asp-action="DeleteCampo" asp-route-id="@item.Id">
                Deletar Campo
            </a>
        </div>
        <br />
        <br />
    </div>
    }
</div>
